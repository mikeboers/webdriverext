{
    "manifest_version": 2,
    
    "name": "WebDriverExt",
    "description": "Hooks for WebDriverExt.",
    "version": "1.0.0",

    "background": {
        "scripts": ["back.js"]
    },

    "content_scripts": [{
        "matches": ["http://*/*", "https://*/*"],
        "js": ["main.js"],
        "run_at": "document_end",
        "all_frames": true,
        "match_about_blank": true
    }],

    "web_accessible_resources": [
        "*"
    ],

    "permissions": [

        "cookies",
        "downloads",

        "http://*/*",
        "https://*/*"
        
    ]
    
}